package api.inmet.newton.controller;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import api.inmet.newton.models.AutomaticStationEntity;
import api.inmet.newton.repository.AutomaticStationRepository;
import lombok.AllArgsConstructor;

@AllArgsConstructor
@RequestMapping("https://apitempo.inmet.gov.br/estacao/dados/2022-09-20")
@RestController
public class AutomaticStationsController {
	
	AutomaticStationRepository asr;
	
	@GetMapping
	public List<AutomaticStationEntity> recuperarDados(){
		return asr.findAll();
	}

}
